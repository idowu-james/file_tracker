<span class= "text-lg text-bold text-primary"><h2>Sign in</h2></span>
	
<div class="form">
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-group">
	    <%= f.input_field :username, required: true, :class => "form-control" %>
	    <%= f.label :username %>
	  </div>
	   <div class="form-group">
	    <%= f.input_field :password, required: true, :class => "form-control" %>
	    <%= f.label :password %>
	  </div>
	   <br/>
		
	<div class="row">
		<div class="col-xs-6 text-left">
			<div class="checkbox checkbox-inline checkbox-styled">
				<label>
		    		<%= f.input_field :remember_me, as: :boolean, boolean_style: :inline if devise_mapping.rememberable? %>
		    		<span><%= f.label :remember_me %></span>
				</label>
	    	</div>
	    </div> <!-- end of checkbox col -->

	  	<div class="col-xs-6 text-right">
	   		 <%= submit_tag "Log in", :class => "btn btn-primary btn-raised" %>	    
	  	</div><!-- end of button col -->

	 </div><!-- end of row -->



	<% end %>

	<%= render "devise/shared/links" %>

</div>
