
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>User Office</th>
      <th>User Type</th>
      <th>Last Logged-In Date</th>
      <th>Last Logged-In Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.username %></td>
        <td><%= user.office.name if user.office.present? %></td>
        <td><%= user.registry_officer ? 'Registry Officer' : 'Officer' %></td>
        <td><%= user.last_sign_in_at.strftime("%d %b %Y ") %></td>
        <td><%= user.last_sign_in_at.strftime("%l:%M %p") %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

